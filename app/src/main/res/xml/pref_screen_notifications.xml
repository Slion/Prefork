<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:a="http://schemas.android.com/apk/res/android">

    <PreferenceCategory a:title="Notifications">
        <SwitchPreferenceCompat
            a:key="push_notifications"
            a:title="Push notifications"
            a:summary="Receive push notifications"
            a:defaultValue="true" />

        <SwitchPreferenceCompat
            a:key="notification_sound"
            a:title="Sound"
            a:summary="Play sound for notifications"
            a:defaultValue="true"
            a:dependency="push_notifications" />

        <SwitchPreferenceCompat
            a:key="notification_vibrate"
            a:title="Vibrate"
            a:summary="Vibrate on notifications"
            a:defaultValue="true"
            a:dependency="push_notifications" />

        <ListPreference
            a:key="notification_ringtone"
            a:title="Ringtone"
            a:entries="@array/notification_ringtone_entries"
            a:entryValues="@array/notification_ringtone_values"
            a:defaultValue="default"
            a:summary="Select a ringtone"
            a:dependency="push_notifications" />
    </PreferenceCategory>

    <PreferenceCategory a:title="Do Not Disturb">
        <SwitchPreferenceCompat
            a:key="dnd_enabled"
            a:title="Enable Do Not Disturb"
            a:summary="Silence notifications during specified hours"
            a:defaultValue="false" />

        <EditTextPreference
            a:key="dnd_start_time"
            a:title="Start time"
            a:summary="22:00"
            a:dialogTitle="Enter start time (HH:MM)"
            a:dependency="dnd_enabled" />

        <EditTextPreference
            a:key="dnd_end_time"
            a:title="End time"
            a:summary="07:00"
            a:dialogTitle="Enter end time (HH:MM)"
            a:dependency="dnd_enabled" />
    </PreferenceCategory>

</PreferenceScreen>

