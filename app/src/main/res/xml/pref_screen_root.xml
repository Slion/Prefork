<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:a="http://schemas.android.com/apk/res/android">

    <PreferenceCategory a:title="General">
        <SwitchPreferenceCompat
            a:key="enable_feature"
            a:title="Enable feature"
            a:summary="Toggle a demo feature"
            a:defaultValue="true" />

        <Preference
            a:key="notifications"
            a:title="Notifications"
            a:summary="Notification settings"
            a:icon="@android:drawable/ic_menu_info_details"
            a:fragment="slions.pref.demo.NotificationsFragment">
            <extra
                a:name="message"
                a:value="@string/welcome_notifications" />
        </Preference>

        <Preference
            a:key="advanced"
            a:title="Advanced"
            a:summary="Advanced settings and tools"
            a:icon="@android:drawable/ic_menu_preferences"
            a:fragment="slions.pref.demo.AdvancedFragment">
            <extra
                a:name="message"
                a:value="@string/welcome_advanced" />
        </Preference>

        <ListPreference
            a:key="theme"
            a:title="Theme"
            a:summary="Select app theme"
            a:entries="@array/theme_entries"
            a:entryValues="@array/theme_values"
            a:defaultValue="system" />
    </PreferenceCategory>

    <PreferenceCategory a:title="Account">
        <EditTextPreference
            a:key="username"
            a:title="Username"
            a:summary="Enter your username"
            a:dialogTitle="Enter username" />

        <EditTextPreference
            a:key="email"
            a:title="Email"
            a:summary="Enter your email address"
            a:dialogTitle="Enter email"
            a:inputType="textEmailAddress" />
    </PreferenceCategory>

    <PreferenceCategory a:title="Privacy">
        <SwitchPreferenceCompat
            a:key="analytics"
            a:title="Analytics"
            a:summary="Help improve the app by sending usage data"
            a:defaultValue="false" />

        <SwitchPreferenceCompat
            a:key="crash_reports"
            a:title="Crash reports"
            a:summary="Automatically send crash reports"
            a:defaultValue="true" />
    </PreferenceCategory>

</PreferenceScreen>

